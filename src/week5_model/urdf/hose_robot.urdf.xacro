<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="hose_plate_waffle_combined">
  <!-- TurtleBot3 Waffle 로드 -->
  <xacro:include filename="./turtlebot3_waffle_pi.urdf.xacro"/>

  <!-- hose_plate 정의 -->
  <material name="hose_plate_light_black">
    <color rgba="0.1 0.4118 0.7059 1.0"/>
  </material>

    <!-- TurtleBot3와 hose_plate 연결 -->
  <joint name="hose_to_waffle_joint" type="fixed">
    <parent link="base_link"/> <!-- TurtleBot3의 base_link -->
    <child link="hose_plate_base_link"/> <!-- hose_plate의 base_footprint -->
    <origin rpy="0 0 0" xyz="-0.295 0.040 0"/> <!-- 위치 조정 -->
  </joint>

  <link name="hose_plate_base_link">
    <visual>
      <origin rpy="1.57 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://week5_model/mesh/hose/Base2.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="hose_plate_light_black"/>
    </visual>
    <collision>
      <origin rpy="1.57 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://week5_model/mesh/hose/Base2.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <joint name="top_joint" type="prismatic">
    <parent link="hose_plate_base_link"/>
    <child link="top_link"/>
    <origin rpy="0 0 0" xyz="0 -0.1 0.02"/>
    <axis xyz="0 0 1"/> <!-- z축 방향으로 선형 이동 -->
    <limit lower="0.0" upper="0.07" effort="50.0" velocity="0.035"/>
  </joint>

  <link name="top_link">
    <visual>
      <origin rpy="1.57 0 1.57" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://week5_model/mesh/hose/Top2.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="hose_plate_light_black"/>
    </visual>
    <collision>
      <origin rpy="1.57 0 1.57" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://week5_model/mesh/hose/Top2.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

    <!-- Transmission 설정
  <transmission name="top_joint_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="top_joint">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="motor_top">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission> -->

</robot>
